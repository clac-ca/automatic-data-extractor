{
    "packages": {
        ".": {
            "release-type": "simple",
            "version-file": "VERSION",
            "changelog-path": "CHANGELOG.md",
            "include-component-in-tag": false
        },
        "apps/ade-api": {
            "release-type": "python",
            "package-name": "ade-api",
