{
  "name": "ADE Dev (Postgres + Azurite)",
  "dockerComposeFile": "docker-compose.yaml",
  "service": "ade",
  "workspaceFolder": "/workspaces/automatic-data-extractor",
  "shutdownAction": "stopCompose",

  "remoteUser": "vscode",
  "updateRemoteUserUID": true,

  "mounts": [
    "source=${localEnv:HOME}/.codex,target=/home/vscode/.codex,type=bind,consistency=cached"
  ],

  "postCreateCommand": "bash -lc './setup.sh'",
  //waitFor": "postCreateCommand", // Ensure venv is setup with ade installed before opening
  
  "forwardPorts": [
    "postgres:5432",
    "azurite:10000"
  ],
  "portsAttributes": {
    "postgres:5432": { "label": "Postgres" },
    "azurite:10000": { "label": "Azurite (Blob)" }
  },

  "customizations": {
    "vscode": {
      "extensions": [
        "ms-python.python",
        "ms-python.vscode-pylance",
        "openai.chatgpt"
      ],
      "settings": {
        "python.defaultInterpreterPath": "${workspaceFolder}/backend/.venv/bin/python"
      }
    }
  },

  "features": {
    "ghcr.io/devcontainers/features/docker-in-docker:2": {
      "moby": true,
      "azureDnsAutoDetection": true,
      "installDockerBuildx": true,
      "version": "latest",
      "dockerDashComposeVersion": "v2"
    }
  }
}
