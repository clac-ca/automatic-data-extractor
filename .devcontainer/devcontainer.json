{
  "name": "ADE (Python 3.12 + ODBC + Node)",
  "dockerComposeFile": "docker-compose.yml",
  "service": "ade",
  "workspaceFolder": "/workspaces/automatic-data-extractor",
  "shutdownAction": "stopCompose",
  "remoteUser": "vscode",
  "features": {
    "ghcr.io/devcontainers/features/node:1": {
      "version": "24"
    }
  },
  "postCreateCommand": "bash -lc 'bash scripts/dev/setup.sh'",
  "customizations": {
    "vscode": {
			// Add the IDs of extensions you want installed when the container is created.
			"extensions": [
                "ms-python.python",
                "ms-python.vscode-pylance",
				"ms-vscode.vscode-node-azure-pack",
				"ms-azuretools.vscode-docker",
				"ms-mssql.mssql",
				"github.copilot",
				"github.codespaces"
			],
      "settings": {
        "python.defaultInterpreterPath": "${workspaceFolder}/.venv/bin/python",
        "python.testing.pytestEnabled": true,
        "python.testing.pytestArgs": [
          "apps/ade-api/tests",
          "apps/ade-worker/tests",
          "apps/ade-cli/tests"
        ],
        "editor.formatOnSave": true,
				"mssql.connections": [
					{
						"server": "localhost,1433",
						"database": "master",
						"authenticationType": "SqlLogin",
						"user": "sa",
						"password": "${containerEnv:ADE_SQL_PASSWORD:YourStrong!Passw0rd}",
						"savePassword": true,
						"profileName": "LocalDev",
						"trustServerCertificate": true
					}
				],
				"sqlDatabaseProjects.dotnetSDK Location": "/usr/share/dotnet"
      }
    }
  },
  "forwardPorts": [
    8000,
    5173,
    1433,
    10000
  ],
  "portsAttributes": {
    "8000": {
      "label": "ADE API"
    },
    "5173": {
      "label": "ADE Web (Vite)"
    },
    "1433": {
      "label": "SQL Server"
    },
    "10000": {
      "label": "Azurite Blob"
    }
  }
}
