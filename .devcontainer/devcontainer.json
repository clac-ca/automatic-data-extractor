{
  "name": "ADE Dev (Root Compose)",
  "dockerComposeFile": [
    "../docker-compose.yaml",
    "docker-compose.override.yaml"
  ],
  "service": "ade",
  "workspaceFolder": "/app",
  "shutdownAction": "stopCompose",

  "remoteUser": "appuser",
  "updateRemoteUserUID": true,
  
  "forwardPorts": [
    "ade:8000",
    "ade:8001",
    "postgres:5432",
    "azurite:10000"
  ],
  "portsAttributes": {
    "ade:8000": { "label": "Web" },
    "ade:8001": { "label": "API" },
    "postgres:5432": { "label": "Postgres" },
    "azurite:10000": { "label": "Azurite (Blob)" }
  },

  "customizations": {
    "vscode": {
      "extensions": [
        "ms-python.python",
        "ms-python.vscode-pylance",
        "openai.chatgpt"
      ],
      "settings": {
        "python.defaultInterpreterPath": "/opt/venv/bin/python"
      }
    }
  },

  "features": {
    "ghcr.io/devcontainers/features/docker-in-docker:2": {
      "moby": true,
      "azureDnsAutoDetection": true,
      "installDockerBuildx": true,
      "version": "latest",
      "dockerDashComposeVersion": "v2"
    }
  }
}
