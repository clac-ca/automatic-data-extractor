{
  "name": "ADE Dev (Postgres + Azurite)",
  "dockerComposeFile": "docker-compose.yaml",
  "service": "ade",
  "workspaceFolder": "/workspaces/automatic-data-extractor",
  "shutdownAction": "stopCompose",
  "remoteUser": "vscode",
  "updateRemoteUserUID": true,
  "postCreateCommand": "bash -lc './setup.sh'",
  "postStartCommand": "bash -lc 'uv sync --dev --frozen'",
  "remoteEnv": {
    "PATH": "/workspaces/automatic-data-extractor/.venv/bin:${containerEnv:PATH}"
  },
  "customizations": {
    "vscode": {
      "extensions": [
        "ms-python.python",
        "ms-python.vscode-pylance"
      ],
      "settings": {
        "python.defaultInterpreterPath": "/workspaces/automatic-data-extractor/.venv/bin/python",
        "python.terminal.activateEnvironment": true
      }
    }
  },
  "features": {
    "ghcr.io/jsburckhardt/devcontainer-features/uv:1": {},
    "ghcr.io/devcontainers/features/node:1": { "version": "22" },
    "ghcr.io/devcontainers/features/git:1": {}
  }
}
