{
  "name": "ADE Dev (Python + Node + Azure SQL Driver)",
  "dockerComposeFile": "docker-compose.yml",
  "service": "ade",
  "workspaceFolder": "/workspaces/automatic-data-extractor",

  // Start only what you want. Add/remove mssql/azurite to make them "optional".
  "runServices": ["ade", "mssql", "azurite"],

  // Forward service ports (works locally and is the recommended approach in Compose scenarios too)
  "forwardPorts": ["mssql:1433", "azurite:10000", "azurite:10001", "azurite:10002"],

  "features": {
    // Official Node feature (installs Node via nvm + yarn + pnpm)
    "ghcr.io/devcontainers/features/node:1": {
      "version": "22"
    }
  },

  // Run repo installs after the workspace is mounted :contentReference[oaicite:6]{index=6}
  "onCreateCommand": "bash scripts/dev/bootstrap.sh",

  // Optional: helps for prebuild refresh / creation flows :contentReference[oaicite:7]{index=7}
  "updateContentCommand": "bash scripts/dev/bootstrap.sh",

  "customizations": {
    "vscode": {
      "extensions": [
        "ms-python.python",
        "ms-python.vscode-pylance",
        "ms-azuretools.vscode-docker",
        "ms-mssql.mssql",
        "openai.chatgpt"
      ]
    }
  }
}
