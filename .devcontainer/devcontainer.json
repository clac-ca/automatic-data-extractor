{
  "name": "ADE (Python 3.12 + Postgres + Node)",
  "dockerComposeFile": "docker-compose.yml",
  "service": "ade",
  "workspaceFolder": "/workspaces/automatic-data-extractor",
  "shutdownAction": "stopCompose",
  "remoteUser": "vscode",
  "updateRemoteUserUID": true,
  "features": {
    "ghcr.io/devcontainers/features/docker-outside-of-docker:1": {},
    "ghcr.io/devcontainers/features/node:1": {
      "version": "24"
    }
  },
  "mounts": [
    "type=bind,source=${localEnv:HOME}${localEnv:USERPROFILE}/.codex,target=/home/vscode/.codex,consistency=cached"
  ],
  "postCreateCommand": "bash -lc 'bash scripts/dev/bootstrap.sh'",
  "customizations": {
    "vscode": {
      "extensions": [
        "ms-python.python",
        "ms-python.vscode-pylance",
        "ms-azuretools.vscode-docker",
        "dbaeumer.vscode-eslint",
        "ms-ossdata.vscode-pgsql",
        "openai.chatgpt"
      ],
      "settings": {
        "python.testing.pytestEnabled": true,
        "python.testing.pytestArgs": [
          "apps/ade-api/tests",
          "apps/ade-worker/tests",
          "apps/ade-cli/tests"
        ],
        "editor.formatOnSave": true
      }
    }
  },
  "forwardPorts": [
    8000,
    5173,
    5432,
    10000
  ],
  "portsAttributes": {
    "8000": {
      "label": "ADE API"
    },
    "5173": {
      "label": "ADE Web (Vite)"
    },
    "5432": {
      "label": "Postgres"
    },
    "10000": {
      "label": "Azurite Blob"
    }
  }
}
