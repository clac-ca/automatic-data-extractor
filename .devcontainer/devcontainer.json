{
  "name": "ADE Dev",
  "dockerComposeFile": [
    "docker-compose.yaml"
  ],
  "service": "ade",
  "runServices": ["ade", "postgres", "azurite", "azurite-init"],
  "workspaceFolder": "/app/src",
  "shutdownAction": "stopCompose",

  "remoteUser": "adeuser",
  "updateRemoteUserUID": true,
  "postCreateCommand": "./setup.sh",
  // Mirror production's canonical virtualenv location so container binaries always come from /app/.venv.
  "remoteEnv": {
    "UV_PROJECT_ENVIRONMENT": "/app/.venv",
    "VIRTUAL_ENV": "/app/.venv",
    "PATH": "/app/.venv/bin:${containerEnv:PATH}"
  },

  "forwardPorts": [8000, 8001, 5432, 10000],
  "portsAttributes": {
    "8000": { "label": "Web" },
    "8001": { "label": "API" },
    "5432": { "label": "Postgres" },
    "10000": { "label": "Azurite (Blob)" }
  },

  "customizations": {
    "vscode": {
      "extensions": [
        "ms-python.python",
        "ms-python.vscode-pylance"
      ],
      "settings": {
        "python.defaultInterpreterPath": "/app/.venv/bin/python"
      }
    }
  }
}
