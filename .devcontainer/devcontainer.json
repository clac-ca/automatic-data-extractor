{
  "name": "ADE Dev",
  "dockerComposeFile": [
    "docker-compose.yaml"
  ],
  "service": "ade",
  "runServices": ["ade"],
  "workspaceFolder": "/workspaces/automatic-data-extractor",
  "shutdownAction": "stopCompose",

  "remoteUser": "adeuser",
  "updateRemoteUserUID": true,
  "postCreateCommand": "./setup.sh",

  "forwardPorts": [8000, 8001, 5432, 10000],
  "portsAttributes": {
    "8000": { "label": "Web" },
    "8001": { "label": "API" },
    "5432": { "label": "Postgres" },
    "10000": { "label": "Azurite (Blob)" }
  },

  "customizations": {
    "vscode": {
      "extensions": [
        "ms-python.python",
        "ms-python.vscode-pylance"
      ],
      "settings": {
        "python.defaultInterpreterPath": "/workspaces/automatic-data-extractor/backend/.venv/bin/python"
      }
    }
  }
}
