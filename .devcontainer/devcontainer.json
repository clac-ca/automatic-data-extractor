{
  "name": "ADE (Python 3.12 + ODBC + Node)",
  "dockerComposeFile": "docker-compose.yml",
  "service": "ade",
  "workspaceFolder": "/workspaces/automatic-data-extractor",
  "shutdownAction": "stopCompose",
  "remoteUser": "vscode",
  "updateRemoteUserUID": true,
  "features": {
    "ghcr.io/devcontainers/features/node:1": {
      "version": "24"
    }
  },
  "onCreateCommand": "bash -lc 'test -x .venv/bin/python || python -m venv .venv'",
  "updateContentCommand": "bash -lc 'bash scripts/dev/setup.sh'",
  "waitFor": "updateContentCommand",
  "customizations": {
    "vscode": {
      "extensions": [
        "ms-python.python",
        "ms-python.vscode-pylance",
        "ms-azuretools.vscode-docker",
        "dbaeumer.vscode-eslint",
        "openai.chatgpt"
      ],
      "settings": {
        "python.defaultInterpreterPath": "${workspaceFolder}/.venv",
        "python.terminal.activateEnvironment": true,
        "python.testing.pytestEnabled": true,
        "python.testing.pytestArgs": [
          "apps/ade-api/tests",
          "apps/ade-worker/tests",
          "apps/ade-cli/tests"
        ],
        "editor.formatOnSave": true
      }
    }
  },
  "forwardPorts": [
    8000,
    5173,
    1433,
    10000
  ],
  "portsAttributes": {
    "8000": {
      "label": "ADE API"
    },
    "5173": {
      "label": "ADE Web (Vite)"
    },
    "1433": {
      "label": "SQL Server"
    },
    "10000": {
      "label": "Azurite Blob"
    }
  }
}