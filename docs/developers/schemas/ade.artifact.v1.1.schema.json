{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "urn:ade:artifact.v1.1",
  "title": "ADE Artifact v1.1",
  "type": "object",
  "additionalProperties": false,
  "required": ["artifact_version", "job", "engine", "rules", "sheets", "pass_history"],
  "properties": {
    "artifact_version": { "type": "string", "const": "1.1" },

    "job": {
      "type": "object",
      "additionalProperties": false,
      "required": ["job_id", "source_file", "config_id", "created_at"],
      "properties": {
        "job_id": { "type": "string", "minLength": 1 },
        "source_file": { "type": "string", "minLength": 1 },
        "config_id": { "type": "string", "minLength": 1 },
        "created_at": { "type": "string", "format": "date-time" }
      }
    },

    "engine": {
      "type": "object",
      "additionalProperties": false,
      "required": ["writer"],
      "properties": {
        "writer": {
          "type": "object",
          "additionalProperties": false,
          "required": ["mode", "append_unmapped_columns", "unmapped_prefix"],
          "properties": {
            "mode": { "type": "string", "enum": ["row_streaming", "in_memory"] },
            "append_unmapped_columns": { "type": "boolean", "default": true },
            "unmapped_prefix": { "type": "string", "default": "raw_" }
          }
        }
      }
    },

    "rules": {
      "type": "object",
      "additionalProperties": false,
      "required": ["row_types", "column_detect", "transform", "validate"],
      "properties": {
        "row_types": { "$ref": "#/$defs/RuleRegistry" },
        "column_detect": { "$ref": "#/$defs/RuleRegistry" },
        "transform": { "$ref": "#/$defs/RuleRegistry" },
        "validate": { "$ref": "#/$defs/RuleRegistry" }
      }
    },

    "sheets": {
      "type": "array",
      "items": { "$ref": "#/$defs/Sheet" }
    },

    "output": {
      "oneOf": [
        { "type": "null" },
        { "$ref": "#/$defs/OutputPlan" }
      ]
    },

    "summary": {
      "oneOf": [
        { "type": "null" },
        { "$ref": "#/$defs/JobSummary" }
      ]
    },

    "pass_history": {
      "type": "array",
      "items": { "$ref": "#/$defs/PassHistoryItem" }
    }
  },

  "$defs": {
    "IdSheet": { "type": "string", "pattern": "^sheet_[1-9][0-9]*$" },
    "IdTable": { "type": "string", "pattern": "^table_[1-9][0-9]*$" },
    "IdColumn": { "type": "string", "pattern": "^col_[1-9][0-9]*$" },
    "TargetFieldId": { "type": "string", "pattern": "^[a-z][a-z0-9_]*$" },

    "RuleId": {
      "type": "string",
      "description": "Short rule key used by traces, e.g. col.member_id.pattern",
      "pattern": "^[a-z]+(?:\\.[a-z0-9_]+)+$"
    },

    "ImplRef": {
      "type": "string",
      "description": "Path-with-function 'path/to/file.py:function_name'",
      "pattern": "^[A-Za-z0-9_\\-./]+:[A-Za-z_][A-Za-z0-9_]*$"
    },

    "GitishVersion": {
      "type": "string",
      "description": "Hash/ID of rule implementation version (e.g., git SHA)",
      "pattern": "^[0-9a-f]{6,40}$"
    },

    "A1Cell": {
      "type": "string",
      "pattern": "^[A-Z]{1,3}[1-9][0-9]*$"
    },

    "A1Range": {
      "type": "string",
      "pattern": "^[A-Z]{1,3}[1-9][0-9]*:[A-Z]{1,3}[1-9][0-9]*$"
    },

    "RuleRegistry": {
      "type": "object",
      "additionalProperties": false,
      "patternProperties": {
        "^[a-z]+(?:\\.[a-z0-9_]+)+$": {
          "type": "object",
          "additionalProperties": false,
          "required": ["impl", "version"],
          "properties": {
            "impl": { "$ref": "#/$defs/ImplRef" },
            "version": { "$ref": "#/$defs/GitishVersion" },
            "description": { "type": "string" }
          }
        }
      }
    },

    "RuleTrace": {
      "type": "object",
      "additionalProperties": false,
      "required": ["rule", "delta"],
      "properties": {
        "rule": { "$ref": "#/$defs/RuleId" },
        "delta": { "type": "number" }
      }
    },

    "RowClassItem": {
      "type": "object",
      "additionalProperties": false,
      "required": ["row_index", "label", "scores_by_type"],
      "properties": {
        "row_index": { "type": "integer", "minimum": 1 },
        "label": { "type": "string", "enum": ["header", "data", "separator", "group_header"] },
        "confidence": { "type": "number" },
        "scores_by_type": {
          "type": "object",
          "additionalProperties": { "type": "number" }
        },
        "rule_traces": {
          "type": "array",
          "items": { "$ref": "#/$defs/RuleTrace" }
        }
      }
    },

    "HeaderInfo": {
      "type": "object",
      "additionalProperties": false,
      "required": ["kind", "row_index", "source_header"],
      "properties": {
        "kind": { "type": "string", "enum": ["raw", "synthetic"] },
        "row_index": { "type": "integer", "minimum": 1 },
        "source_header": {
          "type": "array",
          "items": { "type": "string" },
          "minItems": 1
        }
      }
    },

    "ColumnDescriptor": {
      "type": "object",
      "additionalProperties": false,
      "required": ["column_id"],
      "properties": {
        "column_id": { "$ref": "#/$defs/IdColumn" },
        "source_header": { "type": "string" }
      }
    },

    "Contributor": {
      "type": "object",
      "additionalProperties": false,
      "required": ["rule", "delta"],
      "properties": {
        "rule": { "$ref": "#/$defs/RuleId" },
        "delta": { "type": "number" }
      }
    },

    "MappingEntry": {
      "type": "object",
      "additionalProperties": false,
      "required": ["raw", "target_field", "score"],
      "properties": {
        "raw": {
          "type": "object",
          "additionalProperties": false,
          "required": ["column"],
          "properties": {
            "column": { "$ref": "#/$defs/IdColumn" },
            "header": { "type": "string" }
          }
        },
        "target_field": { "$ref": "#/$defs/TargetFieldId" },
        "score": { "type": "number" },
        "contributors": {
          "type": "array",
          "items": { "$ref": "#/$defs/Contributor" }
        }
      }
    },

    "FieldTinyStats": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "distinct": { "type": "integer", "minimum": 0 },
        "empty": { "type": "integer", "minimum": 0 },
        "mostly_alnum": { "type": "boolean" },
        "mostly_lower": { "type": "boolean" }
      }
    },

    "TransformSummary": {
      "type": "object",
      "additionalProperties": false,
      "required": ["target_field", "changed", "total"],
      "properties": {
        "target_field": { "$ref": "#/$defs/TargetFieldId" },
        "transform": {
          "oneOf": [
            { "type": "string" },
            { "type": "null" }
          ]
        },
        "changed": { "type": "integer", "minimum": 0 },
        "total": { "type": "integer", "minimum": 0 },
        "notes": { "type": "string" }
      }
    },

    "ValidationIssue": {
      "type": "object",
      "additionalProperties": false,
      "required": ["a1", "row_index", "target_field", "code", "severity", "message"],
      "properties": {
        "a1": { "$ref": "#/$defs/A1Cell" },
        "row_index": { "type": "integer", "minimum": 1 },
        "target_field": { "$ref": "#/$defs/TargetFieldId" },
        "code": { "type": "string" },
        "severity": { "type": "string", "enum": ["error", "warning", "info"] },
        "message": { "type": "string" },
        "rule": { "$ref": "#/$defs/RuleId" }
      }
    },

    "ValidationBlock": {
      "type": "object",
      "additionalProperties": false,
      "required": ["issues", "summary_by_field"],
      "properties": {
        "issues": {
          "type": "array",
          "items": { "$ref": "#/$defs/ValidationIssue" }
        },
        "summary_by_field": {
          "type": "object",
          "additionalProperties": {
            "type": "object",
            "additionalProperties": false,
            "properties": {
              "errors": { "type": "integer", "minimum": 0 },
              "warnings": { "type": "integer", "minimum": 0 },
              "missing": { "type": "integer", "minimum": 0 }
            }
          }
        }
      }
    },

    "OutputPlan": {
      "type": "object",
      "additionalProperties": false,
      "required": ["format", "sheet", "path", "column_plan"],
      "properties": {
        "format": { "type": "string", "enum": ["xlsx", "csv", "parquet"] },
        "sheet": { "type": "string", "minLength": 1 },
        "path": { "type": "string", "minLength": 1 },
        "column_plan": {
          "type": "object",
          "additionalProperties": false,
          "required": ["target", "appended_unmapped"],
          "properties": {
            "target": {
              "type": "array",
              "items": {
                "type": "object",
                "additionalProperties": false,
                "required": ["field", "output_header", "order"],
                "properties": {
                  "field": { "$ref": "#/$defs/TargetFieldId" },
                  "output_header": { "type": "string" },
                  "order": { "type": "integer", "minimum": 1 }
                }
              }
            },
            "appended_unmapped": {
              "type": "array",
              "items": {
                "type": "object",
                "additionalProperties": false,
                "required": ["source_header", "output_header", "order"],
                "properties": {
                  "source_header": { "type": "string" },
                  "output_header": { "type": "string" },
                  "order": { "type": "integer", "minimum": 1 }
                }
              }
            }
          }
        }
      }
    },

    "JobSummary": {
      "type": "object",
      "additionalProperties": false,
      "required": ["rows_written", "columns_written", "issues_found"],
      "properties": {
        "rows_written": { "type": "integer", "minimum": 0 },
        "columns_written": { "type": "integer", "minimum": 0 },
        "issues_found": { "type": "integer", "minimum": 0 }
      }
    },

    "PassHistoryItem": {
      "type": "object",
      "additionalProperties": false,
      "required": ["pass", "name", "completed_at"],
      "properties": {
        "pass": { "type": "number" },
        "name": {
          "type": "string",
          "enum": ["structure", "mapping", "analyze", "transform", "validate", "generate"]
        },
        "completed_at": { "type": "string", "format": "date-time" }
      }
    },

    "Table": {
      "type": "object",
      "additionalProperties": false,
      "required": ["id", "range", "data_range", "header", "columns"],
      "properties": {
        "id": { "$ref": "#/$defs/IdTable" },
        "range": { "$ref": "#/$defs/A1Range" },
        "data_range": { "$ref": "#/$defs/A1Range" },
        "header": { "$ref": "#/$defs/HeaderInfo" },
        "columns": {
          "type": "array",
          "items": { "$ref": "#/$defs/ColumnDescriptor" }
        },
        "mapping": {
          "type": "array",
          "items": { "$ref": "#/$defs/MappingEntry" }
        },
        "analyze": {
          "type": "object",
          "additionalProperties": { "$ref": "#/$defs/FieldTinyStats" }
        },
        "transforms": {
          "type": "array",
          "items": { "$ref": "#/$defs/TransformSummary" }
        },
        "validation": { "$ref": "#/$defs/ValidationBlock" }
      }
    },

    "Sheet": {
      "type": "object",
      "additionalProperties": false,
      "required": ["id", "name", "tables"],
      "properties": {
        "id": { "$ref": "#/$defs/IdSheet" },
        "name": { "type": "string" },
        "row_classification": {
          "type": "array",
          "items": { "$ref": "#/$defs/RowClassItem" }
        },
        "tables": {
          "type": "array",
          "items": { "$ref": "#/$defs/Table" }
        }
      }
    }
  }
}
