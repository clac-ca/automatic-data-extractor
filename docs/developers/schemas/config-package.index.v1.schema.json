{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "urn:ade:config-package.index.v1",
  "title": "ADE Config Package Index v1",
  "type": "object",
  "additionalProperties": false,
  "required": ["version", "root", "entries"],
  "properties": {
    "version": { "type": "string", "const": "config-package.index.v1" },
    "root": { "type": "string", "minLength": 1 },
    "entries": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "additionalProperties": false,
        "required": ["path", "kind", "required"],
        "properties": {
          "path": { "type": "string", "minLength": 1 },
          "kind": { "type": "string", "enum": ["file", "dir"] },
          "required": { "type": "boolean" },
          "exists": { "type": "boolean", "description": "Filled by the linter at runtime" },
          "sha256": { "type": "string", "pattern": "^[0-9a-f]{64}$" }
        }
      }
    }
  }
}
