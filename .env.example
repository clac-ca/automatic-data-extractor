# .env.example
#
# Copy to .env to override defaults.
# Most settings have sensible defaults for local/devcontainer use, so this file is optional.

# ---- App ----
ADE_APP_ENVIRONMENT=local
ADE_LOG_LEVEL=INFO

# ---- SQL Server (local container defaults) ----
ADE_SQL_HOST=sql
ADE_SQL_PORT=1433
ADE_SQL_USER=sa
ADE_SQL_PASSWORD=YourStrong!Passw0rd
ADE_SQL_DATABASE=ade
# For local SQL Server containers, "optional" + TrustServerCertificate=yes is the most forgiving.
ADE_SQL_ENCRYPT=optional
ADE_SQL_TRUST_SERVER_CERTIFICATE=yes

# ---- Storage (Azurite blob-only defaults) ----
ADE_STORAGE_ACCOUNT_NAME=devstoreaccount1
ADE_STORAGE_ACCOUNT_KEY=Eby8vdM02xNOcqFlqUwJPLlmEtlCDXJ1OUzFT50uSRZ6IFsuFq2UVErCz4I6tq/K1SZFPTOtr/KBHBeksoGMGw==
ADE_STORAGE_BLOB_ENDPOINT=http://azurite:10000/devstoreaccount1
