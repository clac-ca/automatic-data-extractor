{
  "include": ["src/**/*"],
  "compilerOptions": {
    "lib": ["DOM", "DOM.Iterable", "ES2022"],
    "types": ["node", "vite/client"],
    "target": "ES2022",
    "module": "ES2022",
    "moduleResolution": "bundler",
    "jsx": "react-jsx",
    "baseUrl": "src",
    "paths": {
      "@app/*": ["app/*"],
      "@screens/*": ["screens/*"],
      "@ui/*": ["ui/*"],
      "@shared/*": ["shared/*"],
      "@schema/*": ["schema/*"],
      "@generated/*": ["generated/*"],
      "@openapi": ["generated/openapi.d.ts"],
      "@test/*": ["test/*"]
    },
    "esModuleInterop": true,
    "verbatimModuleSyntax": true,
    "noEmit": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "strict": true
  }
}
